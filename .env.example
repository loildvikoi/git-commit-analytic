# =============================================================================
# GIT AI ANALYTICS - ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Settings
APP_NAME="Git AI Analytics"
APP_VERSION="2.0.0"
ENVIRONMENT="development"  # development, staging, production, testing
DEBUG="true"
SECRET_KEY="dev-secret-key-change-in-production-2024"

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST="0.0.0.0"
PORT="8000"
WORKERS="1"
RELOAD="true"

# CORS Configuration (comma-separated for multiple origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS="true"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_PROVIDER="sqlite"  # sqlite, postgresql, mysql
DB_HOST="localhost"
DB_PORT="3306"
DB_NAME="sample"
DB_USER="sample"
DB_PASSWORD="sample"
DB_ECHO="false"
DB_POOL_SIZE="5"
DB_MAX_OVERFLOW="10"

# SQLite specific (only used when DB_PROVIDER=sqlite)
DB_PATH="data/git_analytics.db"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_DB="0"
REDIS_PASSWORD=""
REDIS_PREFIX="git_analytics"
REDIS_MAX_CONNECTIONS="20"

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_DB="0"
CELERY_RESULT_DB="1"
CELERY_TASK_SERIALIZER="json"
CELERY_RESULT_SERIALIZER="json"
CELERY_TIMEZONE="UTC"
CELERY_WORKER_PREFETCH_MULTIPLIER="1"

# =============================================================================
# AI & LLM CONFIGURATION
# =============================================================================

# Ollama Configuration
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3.2:1b"
OLLAMA_TIMEOUT="30"
OLLAMA_MAX_RETRIES="3"

# OpenAI Configuration (backup/alternative)
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-3.5-turbo"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
WEBHOOK_SECRET=""
API_KEY=""
JWT_SECRET_KEY=""
JWT_ALGORITHM="HS256"
JWT_EXPIRE_MINUTES="30"

# Rate Limiting
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="60"

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
CACHE_TTL_DEFAULT="3600"    # 1 hour
CACHE_TTL_SEARCH="300"      # 5 minutes
CACHE_TTL_CHAT="600"        # 10 minutes
MEMORY_CACHE_SIZE="1000"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=""  # Leave empty for stdout only
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"

# =============================================================================
# VECTOR STORE & EMBEDDINGS
# =============================================================================
EMBEDDING_MODEL="all-MiniLM-L6-v2"
EMBEDDING_DIMENSION="384"
CHROMA_PERSIST_DIR="./data/chroma"
CHROMA_COLLECTION_NAME="git_documents"

# =============================================================================
# TEXT PROCESSING
# =============================================================================
MAX_CHUNK_SIZE="500"
CHUNK_OVERLAP="50"
MIN_CHUNK_SIZE="50"

# =============================================================================
# RAG CONFIGURATION
# =============================================================================
HYBRID_SEARCH_SEMANTIC_WEIGHT="0.7"
RAG_MAX_CONTEXT_LENGTH="2000"
RAG_TEMPERATURE="0.3"
RAG_TOP_K="5"
RAG_SCORE_THRESHOLD="0.1"

# =============================================================================
# BACKGROUND TASKS
# =============================================================================
MAX_CONCURRENT_TASKS="10"
TASK_TIMEOUT="300"  # 5 minutes

# =============================================================================
# FILE PROCESSING
# =============================================================================
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES=[".txt", ".md", ".py", ".js", ".json", ".yaml", ".yml", ".rst", ".html", ".css"]

# =============================================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =============================================================================
# Uncomment these for development
# DB_ECHO="true"
# LOG_LEVEL="DEBUG"
# RELOAD="true"

# =============================================================================
# PRODUCTION EXAMPLE (comment out in development)
# =============================================================================
# ENVIRONMENT="production"
# DEBUG="false"
# SECRET_KEY="your-super-secure-secret-key-here"
# WEBHOOK_SECRET="your-github-webhook-secret"
